<%= form_with model: @brand, local: true do |form| %>


      <% if @brand.errors.any? %>

        <div id="error_explanation">
            <div class="form-group alert alert-danger">
          <h2>
            <%= pluralize(@brand.errors.count, "Hata") %> yakalandÄ±:
          </h2>

          <ul>
            <% @brand.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
          </div>
        </div>
      <% end %>
<div class="form_body">
        <div class="form-group">
          <%= form.label :name,class:"col-form-label col-form-label-lg" %><br/>
          <%= form.text_field :name, class:"form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= form.label :headquarters ,class:"col-form-label col-form-label-lg" %><br/>
          <%= form.text_field :headquarters , class:"form-control form-control-lg" %>
        </div>
        <div class="form-group">
          <%= form.label :phone ,class:"col-form-label col-form-label-lg" %><br/>
          <%= form.text_field :phone , class:"form-control form-control-lg" %>
        </div>

       <div class="form-group">
          <%= form.submit  %><br/>
       </div>
</div>

      <% end %>
