<%= form_with model: @product, local:true do |form|  %>


      <% if @product.errors.any? %>
        <div id="error_explanation">
          <div class="form-group alert alert-danger">
          <h2>
            <%= pluralize(@product.errors.count, "Hata") %> yakalandÄ±:
          </h2>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
          </div>
          </div>
      <% end %>

    <div class="form_body">
          <div class="form-group">
            <%= form.label :name ,class:"col-form-label col-form-label-lg"  %><br/>
            <%= form.text_field :name , class:"form-control form-control-lg" %>
          </div>
          <div class="form-group">
            <%= form.label :color ,class:"col-form-label col-form-label-lg"  %><br/>
            <%= form.text_field :color , class:"form-control form-control-lg" %>
          </div>
          <div class="form-group">
            <%= form.label :price ,class:"col-form-label col-form-label-lg"  %><br/>
            <%= form.text_field :price , class:"form-control form-control-lg" %>
          </div>
          <div class="form-group">
            <%= form.label :brand_id ,class:"col-form-label col-form-label-lg" %><br/>
            <%= form.collection_select :brand_id , Brand.order(:name), :id, :name, include_blank: true %>
          </div>
          <div class="form-group">
            <%= form.submit %>
          </div>
    <% end %>
